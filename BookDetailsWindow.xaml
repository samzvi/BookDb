<Window x:Class="BookDb.BookDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podrobnosti o knize" Height="600" Width="700">
    <Grid Margin="10, 0, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Podrobnosti o titulu" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0, 0, 0, 10" />

        <Label Content="Název:" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Datum pořízení:" Grid.Row="2" VerticalAlignment="Center" />
        <TextBox x:Name="AcquirementDateTextBox" Grid.Row="2" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Počet stran:" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox x:Name="TotalPagesTextBox" Grid.Row="3" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Na straně:" Grid.Row="4" VerticalAlignment="Center" />
        <TextBox x:Name="OnPageTextBox" Grid.Row="4" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Kolikrát přečteno:" Grid.Row="5" VerticalAlignment="Center" />
        <TextBox x:Name="TimesReadTextBox" Grid.Row="5" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Hodnocení:" Grid.Row="6" VerticalAlignment="Center" />
        <TextBox x:Name="RatingTextBox" Grid.Row="6" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Poznámky:" Grid.Row="7" VerticalAlignment="Top" />
        <TextBox x:Name="NotesTextBox" Grid.Row="7" Margin="120, 2, 0, 2" TextWrapping="Wrap" AcceptsReturn="True" Height="60" />

        <Label Content="Popis:" Grid.Row="8" VerticalAlignment="Top" />
        <TextBox x:Name="DescriptionTextBox" Grid.Row="8" Margin="120, 2, 0, 2" TextWrapping="Wrap" AcceptsReturn="True" Height="60" />

        <Label Content="Klíčová slova:" Grid.Row="9" VerticalAlignment="Center" />
        <TextBox x:Name="KeywordsTextBox" Grid.Row="9" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <Label Content="Autor:" Grid.Row="10" VerticalAlignment="Center" />
        <ComboBox x:Name="AuthorComboBox" Grid.Row="10"
                  Margin="120, 2, 0, 2"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Center" 
                  IsEditable="True" 
                  StaysOpenOnEdit="True"
                  IsTextSearchEnabled="True"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"/>

        <Label Content="Vydavatel:" Grid.Row="11" VerticalAlignment="Center" />
        <TextBox x:Name="PublisherTextBox" Grid.Row="11" Margin="120, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Height="30" Margin="0, 10, 0, 0">
            <Button Content="Uložit" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True" />
            <Button Content="Zrušit" Width="100" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
