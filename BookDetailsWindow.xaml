<Window x:Class="BookDb.BookDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Podrobnosti o knize" Height="400" Width="500">
    <Grid Margin="10, 0, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Label -->
            <RowDefinition Height="Auto" />
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- Author -->
            <RowDefinition Height="Auto" />
            <!-- Release Date -->
            <RowDefinition Height="Auto" />
            <!-- Pages -->
            <RowDefinition Height="Auto" />
            <!-- Publisher -->
            <RowDefinition Height="Auto" />
            <!-- Keywords -->
            <RowDefinition Height="*" />
            <!-- Description -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Top Label -->
        <Label Content="Podrobnosti o knize" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0, 0, 0, 10" />

        <!-- Title -->
        <Label Content="Název:" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="85, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <!-- Author -->
        <Label Content="Autor:" Grid.Row="2" VerticalAlignment="Center" />
        <ComboBox x:Name="AuthorComboBox" Grid.Row="2"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Center" 
                  Margin="85, 2, 0, 2"
                  IsEditable="True" 
                  StaysOpenOnEdit="True"
                  IsTextSearchEnabled="True"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"/>
        <!-- Release Date -->
        <Label Content="Datum vydání:" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox x:Name="ReleaseDateTextBox" Grid.Row="3" Margin="85, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <!-- Pages -->
        <Label Content="Počet stran:" Grid.Row="4" VerticalAlignment="Center" />
        <TextBox x:Name="PagesTextBox" Grid.Row="4" Margin="85, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <!-- Publisher -->
        <Label Content="Vydavatel:" Grid.Row="5" VerticalAlignment="Center" />
        <TextBox x:Name="PublisherTextBox" Grid.Row="5" Margin="85, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <!-- Keywords -->
        <Label Content="Klíčová slova:" Grid.Row="6" VerticalAlignment="Center" />
        <TextBox x:Name="KeywordsTextBox" Grid.Row="6" Margin="85, 2, 0, 2" VerticalAlignment="Center" Padding="2" />

        <!-- Description -->
        <Label Content="Popis:" Grid.Row="7" VerticalAlignment="Top" />
        <TextBox x:Name="DescriptionTextBox" Grid.Row="7" Margin="85, 2, 0, 2" TextWrapping="Wrap" AcceptsReturn="True" />

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 10, 0, 0">
            <Button Content="Uložit" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" />
            <Button Content="Zrušit" Width="100" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
