<Window x:Class="BookDb.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Přidat knihu" Height="500" Width="400">
    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="120, 2, 0, 2" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="3" />
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="120, 2, 0, 2" />
            <Setter Property="Padding" Value="3" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="IsEditable" Value="True" />
            <Setter Property="StaysOpenOnEdit" Value="True" />
            <Setter Property="IsTextSearchEnabled" Value="True" />
            <Setter Property="DisplayMemberPath" Value="Value" />
            <Setter Property="SelectedValuePath" Value="Key" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid Margin="10, 0, 10, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Přidat knihu" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Margin="0, 0, 0, 10" />

        <Label Content="Název:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Style="{StaticResource TextBoxStyle}" />

        <Label Content="Autor:" Grid.Row="2" />
        <ComboBox x:Name="AuthorComboBox" Grid.Row="2" Style="{StaticResource ComboBoxStyle}" />

        <Label Content="Datum vydání:" Grid.Row="3"/>
        <DatePicker x:Name="ReleaseDatePicker" Grid.Row="3" Margin="120, 2, 0, 2" VerticalAlignment="Center" Foreground="Black" />

        <Label Content="Počet stran:" Grid.Row="4" />
        <TextBox x:Name="PagesTextBox" Grid.Row="4" Style="{StaticResource TextBoxStyle}" TextAlignment="Right" />

        <Label Content="Vydavatelství:" Grid.Row="5" />
        <ComboBox x:Name="PublisherComboBox" Grid.Row="5" Style="{StaticResource ComboBoxStyle}" />

        <Label Content="Klíčová slova:" Grid.Row="6" />
        <TextBox x:Name="KeywordsTextBox" Grid.Row="6" Style="{StaticResource TextBoxStyle}" />

        <Label Content="Popis:" Grid.Row="7" VerticalAlignment="Top" />
        <TextBox x:Name="DescriptionTextBox" Grid.Row="7" Margin="120, 2, 0, 2" TextWrapping="Wrap" Padding="3"/>

        <Label Content="Poznámky:" Grid.Row="8" VerticalAlignment="Top" />
        <TextBox x:Name="NotesTextBox" Grid.Row="8" Margin="120, 2, 0, 2" TextWrapping="Wrap" Padding="3"/>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Height="30" Margin="0, 10, 0, 0">
            <Button Content="Uložit" Width="100" Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True" />
            <Button Content="Zrušit" Width="100" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
