<Window x:Class="BookDb.EditAuthorPublisherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upravit" Height="260" MinHeight="260" Width="400" MinWidth="200">
    <Window.Resources>
        <ControlTemplate x:Key="ValidationErrorTemplate">
            <StackPanel>
                <Border BorderBrush="#BFFF0011" BorderThickness="2" CornerRadius="1">
                    <AdornedElementPlaceholder />
                </Border>
                <TextBlock Foreground="#BFFF0011" FontSize="11" Margin="5, 0, 0, 0" Text="{Binding [0].ErrorContent}" />
            </StackPanel>
        </ControlTemplate>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ValidationErrorTemplate}" />
            <Setter Property="Margin" Value="100, 0, 0, 2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Height" Value="30" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label x:Name="TitleLabel"
               Content="Upravit autora"
               FontSize="18" FontWeight="Bold"
               HorizontalAlignment="Center"
               Grid.Row="0"
               Margin="0, 0, 0, 20" />

        <Label x:Name="NameLabel" Content="Jméno:" VerticalAlignment="Top" Grid.Row="1" />
        <TextBox x:Name="NameTextBox"
                 Grid.Row="1"
                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                 Style="{StaticResource TextBoxStyle}" />

        <Label x:Name="SurnameLabel" Content="Příjmení:" VerticalAlignment="Top" Grid.Row="2" />
        <TextBox x:Name="SurnameTextBox"
                 Grid.Row="2"
                 Text="{Binding Surname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                 Style="{StaticResource TextBoxStyle}" />

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Uložit" Width="100" Margin="5" Padding="5" FontSize="14"
                    Click="SaveButton_Click"
                    IsEnabled="{Binding CanSave}" />
            <Button Content="Zavřít" Width="100" Margin="5" Padding="5" FontSize="14" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
