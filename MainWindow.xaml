<Window x:Class="BookDb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Database" Height="450" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Label at the top -->
        <Label Content="Moje Knihovna" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

        <!-- DataGrid for displaying books -->
        <DataGrid Name="BooksDataGrid" Background="{x:Null}" Grid.Row="1" AutoGenerateColumns="False" Margin="5" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Resources>
                <Style x:Key="TextBlockStyle" TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="2" />
                </Style>

                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF3D3D3D" Offset="0.75"/>
                </LinearGradientBrush>
            </DataGrid.BorderBrush>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Název" Binding="{Binding TITLE}" Width="200" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Autor" Binding="{Binding AUTHOR_NAME}" Width="150" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Vydavatel" Binding="{Binding PUBLISHER_NAME}" Width="150" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Datum pořízení" Binding="{Binding ACQUIREMENT_DATE, StringFormat='d'}" Width="100" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Aktuální stránka" Binding="{Binding ON_PAGE_TOTAL}" Width="100" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Počet přečtení" Binding="{Binding TIMES_READ}" Width="100" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Hodnocení" Binding="{Binding RATING}" Width="100" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Klíčová slova" Binding="{Binding KEYWORDS}" Width="200" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTextColumn Header="Popis" Binding="{Binding DESCRIPTION}" Width="*" ElementStyle="{StaticResource TextBlockStyle}" />
                <DataGridTemplateColumn Header="Akce" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Upravit" Click="ShowDetailsButton_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Controls at the bottom -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Height="40" Margin="5">
            <Button Name="AddBookButton" Content="Přidat knihu" Width="150" Margin="5" Click="AddBookButton_Click" />
            <Button Name="CreateAuthorButton" Content="Přidat autora" Width="150" Margin="5" Click="CreateAuthorButton_Click" />
        </StackPanel>
    </Grid>
</Window>
